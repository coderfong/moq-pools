{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node"
    }
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts",
    "prisma/**/*.ts"
  ],
  "exclude": ["node_modules", ".history", ".next"]
}
